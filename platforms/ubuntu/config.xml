<?xml version='1.0' encoding='utf-8'?>
<widget id="com.netsyms.SnipeITMobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon src="www/img/logo.png" />
    <feature name="Media">
        <param policy_group="microphone" policy_version="1" />
        <param policy_group="video" policy_version="1" />
    </feature>
    <feature name="Capture">
        <param policy_group="audio" policy_version="1" />
        <param policy_group="camera" policy_version="1" />
        <param policy_group="microphone" policy_version="1" />
    </feature>
    <feature name="DeviceOrientation">
        <param policy_group="sensors" policy_version="1" />
    </feature>
    <feature name="Camera">
        <param policy_group="camera" policy_version="1" />
    </feature>
    <feature name="Contacts">
        <param policy_group="contacts" policy_version="1" />
    </feature>
    <feature name="Geolocation">
        <param policy_group="location" policy_version="1" />
    </feature>
    <name>Snipe IT Mobile</name>
    <description>A sample Apache Cordova application that responds to the deviceready event.</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
